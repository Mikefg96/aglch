extends ../layout
block content
    .page-header.page-header-small(style="background-image: url('/img/profile/profile-cover.jpg');")
        .filter
    .wrapper
        .profile-content.section
            .container
                .row
                    .profile-picture
                        .fileinput.fileinput-new(data-provides='fileinput')
                            .fileinput-new.img-no-padding
                                img(src='/img/profile/placeholder.jpg', alt='...', style='display: block; margin-left: auto; margin-right: auto;')
                            .name
                                h4.title.text-center
                                    | #{user.esential.name} #{user.esential.surnames}
                                    br
                                    small #{user.esential.title}
                .row(style='margin-top: -30px;')
                    .col-md-6.ml-auto.mr-auto.text-center
                        p
                            | #{user.esential.description}
                br
                .nav-tabs-navigation
                    .nav-tabs-wrapper
                        ul.nav.nav-tabs(role='tablist')
                            li.nav-item
                                a#profile-tab.nav-link.active(data-toggle='tab', href='#follows', role='tab') Últimas publicaciones
                // Tab panes
                .tab-content
                    #follows.tab-pane.text-center.active(role='tabpanel')
                        h3.text-muted No ha hecho publicaciones aún :(
                        button.btn.btn-warning.btn-round(style='margin-top: 20px;') Publicar
